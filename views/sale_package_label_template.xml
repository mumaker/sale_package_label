<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_package_label_document">
    <t t-call="report.html_container">
        <div class="page">
            <t t-foreach="docs" t-as="doc">
               <table class="table table-condensed">
                <tr>
                    <td class="border-black">
                        <strong>TO:</strong>
                        <div t-field="doc.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                    </td>
                    <td class="border-black">
                       <strong>FROM:</strong>
                       <div t-field="doc.company_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                    </td>
                </tr>
                </table>
            </t>
        </div>
    </t>
</template>
</odoo>